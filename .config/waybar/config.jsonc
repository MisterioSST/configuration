{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": ["sway/window"],
    "modules-right": ["wireplumber", "network", "sway/language", "battery", "clock", "tray", "custom/power"],
    "sway/window": {
        "max-length": 50
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": ["", "", ""],
        "scroll-step": 5.0,
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "tooltip": false
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "{ipaddr}/{cidr} 󰊗",
        "format-disconnected": "",
        "tooltip": false
    },
    "sway/language": {
        "format": "{shortDescription}",
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next",
        "tooltip": false
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""],
        "tooltip": false
    },
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%d.%m.%Y  %H:%M}",
        "tooltip": false
    },
    "custom/power": {
        "format": "",
        "on-click": "swaynag -t powermenu -m 'Power Menu Options' -b 'Shutdown'  'loginctl poweroff' -b 'Restart' 'loginctl reboot' -b 'Sleep' 'loginctl suspend' -b 'Logout' 'swaymsg exit'",
        "tooltip": false
    }
}
